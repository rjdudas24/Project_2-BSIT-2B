<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/admin_bg"
    android:padding="24dp">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:fontFamily="@font/saira_bold"
            android:text="FACULTY INQUIRY RESPONSE"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Student Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STUDENT INFORMATION"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Student Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From:"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInquiryStudentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/saira_semibold"
                android:text="John Doe"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Inquiry Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInquiryStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Pending"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/role_badge_background"
                android:padding="4dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Inquiry Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INQUIRY DETAILS"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/saira_bold"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Subject Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subject:"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInquirySubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/saira_semibold"
                android:text="Meeting Request"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Description Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvInquiryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I would like to schedule a meeting to discuss my thesis progress."
            android:fontFamily="@font/saira_semibold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/list_view_border"
            android:padding="12dp"
            android:minHeight="60dp" />
    </LinearLayout>

    <!-- Response Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHOOSE YOUR RESPONSE"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your availability status for this inquiry:"
            android:fontFamily="@font/saira_semibold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnInquiryAvailable"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="AVAILABLE"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/saira_bold"
            android:background="@drawable/button_close_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnInquiryUnavailable"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="UNAVAILABLE"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/saira_bold"
            android:background="@drawable/button_close_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnInquiryClose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CLOSE"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/saira_bold"
            android:background="@drawable/button_close_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
    </LinearLayout>

</LinearLayout>