<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_submit_btn2">

    <TextView
        android:id="@+id/tvApplicationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACULTY REGISTRATION DETAILS"
        android:fontFamily="@font/saira_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="4dp"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:text="ID Number:" />
        <TextView
            android:id="@+id/tvFacultyID"
            android:fontFamily="@font/saira_semibold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="4dp"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:text="Name:" />
        <TextView
            android:id="@+id/tvFacultyName"
            android:fontFamily="@font/saira_semibold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="4dp"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:text="Email:" />
        <TextView
            android:id="@+id/tvFacultyEmail"
            android:fontFamily="@font/saira_semibold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" />
    </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify faculty credentials and department affiliation before approving."
        android:textStyle="italic"
        android:fontFamily="@font/saira_semibold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPROVE"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REJECT"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:backgroundTint="#F44336" />
    </LinearLayout>
</LinearLayout>