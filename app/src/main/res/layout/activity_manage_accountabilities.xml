<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg">

    <!-- Header with back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Back Button -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bg_white_square" />

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MANAGE ACCOUNTABILITIES"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Filter controls container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_view_border"
        android:padding="12dp">

        <!-- Student Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student: "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:minWidth="60dp" />

            <Spinner
                android:id="@+id/spinnerStudentFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white" />
        </LinearLayout>

        <!-- Status Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:minWidth="60dp" />

            <Spinner
                android:id="@+id/spinnerStatusFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white" />
        </LinearLayout>

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnApplyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply Filter"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:background="@color/dark_blue"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnClearFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Filter"
                android:textSize="12sp"
                android:background="@color/dark_blue"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Info text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¼ Manage student accountabilities - tap to change status or view details"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:textStyle="italic" />

    <!-- Frame layout to hold both ListView and empty state TextView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lvAccountabilities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_border"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbarThumbVertical="@drawable/scrollbar_white_thumb"
            android:scrollbarTrackVertical="@android:color/transparent" />

        <!-- Empty state message -->
        <TextView
            android:id="@+id/tvNoAccountabilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No accountabilities found"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            android:background="@drawable/list_view_border"
            android:padding="32dp"
            android:drawablePadding="16dp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Footer info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ… Paid | âŒ Unpaid | ðŸ—‘ï¸ Delete | ðŸ“ Edit Status"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>