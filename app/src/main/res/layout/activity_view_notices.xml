<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg">

    <!-- Header with back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Back Button -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bg_white_square" />

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOTICES"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Notice count or info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“¢ Organization Notices &amp; Announcements"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textStyle="italic" />

    <!-- Frame layout to hold both ListView and empty state TextView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lvNotices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_border"
            android:padding="12dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:scrollbarThumbVertical="@drawable/scrollbar_white_thumb"
            android:scrollbarTrackVertical="@android:color/transparent" />

        <!-- Empty state message -->
        <TextView
            android:id="@+id/tvNoNotices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No notices available"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            android:background="@drawable/list_view_border"
            android:padding="32dp"
            android:drawablePadding="16dp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Footer info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“® Personal notices are marked with an icon&#10;ðŸ“¢ General notices are for all students"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="2dp" />

</LinearLayout>