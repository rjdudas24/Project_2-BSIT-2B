
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_white_square"
        android:contentDescription="Back"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CISynC Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="130dp"
        android:contentDescription="CISynC Logo"
        android:src="@drawable/ciscync2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Inquire Text -->
    <TextView
        android:id="@+id/tvInquireTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="INQUIRE"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <!-- Faculty Name Field -->

    <TextView
        android:id="@+id/tvFacultyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:text="NAME OF FACULTY"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInquireTitle" />

    <LinearLayout
        android:id="@+id/layoutFaculty"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_white_square"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFacultyLabel">

        <EditText
            android:id="@+id/etFacultyName"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_square"
            android:hint="Enter faculty name"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnClearFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Clear"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:src="@drawable/removeicon"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <!-- Department Field -->

    <TextView
        android:id="@+id/tvDepartmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:text="DEPARTMENT"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutFaculty" />

    <LinearLayout
        android:id="@+id/layoutDepartment"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_white_square"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartmentLabel">

        <EditText
            android:id="@+id/etDepartment"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_square"
            android:hint="Enter Department"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/btnClearFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Clear"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:src="@drawable/removeicon"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <!-- Purpose Field -->

    <TextView
        android:id="@+id/tvPurposeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:text="PURPOSE"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDepartment" />

    <LinearLayout
        android:id="@+id/layoutPurpose"
        android:layout_width="261dp"
        android:layout_height="117dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPurposeLabel">

        <TextView
            android:id="@+id/tvPurposeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_square"
            android:padding="8dp"
            android:hint="Enter Subject"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPurposeDescription"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="@drawable/bg_white_square"
            android:hint="Write purpose..."
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="136dp"
        android:background=""
        android:text="Submit"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

