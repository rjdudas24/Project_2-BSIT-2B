<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Student!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="100dp" />


<!-- g diritso na nako ug CSCO ang org kay sa CISC raman ta taman-->
    <TextView
        android:id="@+id/tvOrganizationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORGANIZATION: CSCO"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_constraintBottom_toTopOf="@+id/tvOrganizationValue"
        android:gravity="center"
        />

<!--    <TextView-->
<!--        android:id="@+id/tvOrganizationValue"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="CSCO"-->
<!--        android:textSize="22sp"-->
<!--        android:textStyle="normal"-->
<!--        android:gravity="center"-->
<!--        />-->

    <!--    partial code, need pa i connect sa database kay daghan man ang position sa CSCO (I think)-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POSITION: "
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        />

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Position: [Not Set]"
        android:textStyle="italic"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/layoutFacultyInquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty Inquiry"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAccountabilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Accountabilities"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTrackDocuments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_green_dark"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Organization Documents"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPostNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_green_dark"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Organization Notice"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>