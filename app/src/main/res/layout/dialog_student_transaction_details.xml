<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/student_dashboard"
    android:padding="24dp">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:fontFamily="@font/saira_bold"
            android:text="TRANSACTION DETAILS"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Transaction Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRANSACTION INFORMATION"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Transaction ID Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transaction ID:"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDialogTransactionId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/saira_semibold"
                android:text="12345"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Action Type Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activity:"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDialogActionType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Document Submission"
                android:fontFamily="@font/saira_bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/role_badge_background"
                android:padding="4dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Timestamp Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date &amp; Time:"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/saira_bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDialogTransactionTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Dec 15, 2023 14:30:25"
                android:fontFamily="@font/saira_semibold"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Activity Description Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVITY DESCRIPTION"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDialogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New document submitted: Transcript of Records"
            android:fontFamily="@font/saira_semibold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Activity Status Section -->
    <LinearLayout
        android:id="@+id/llAdditionalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvAdditionalDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVITY STATUS"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/llAdditionalDetailsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Dynamic content will be added here -->
        </LinearLayout>
    </LinearLayout>

    <!-- Activity Type Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_view_border"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVITY TYPE"
            android:fontFamily="@font/saira_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTransactionIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="ðŸ“„"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTransactionCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Management"
                    android:fontFamily="@font/saira_bold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTransactionSubcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document submitted for review"
                    android:fontFamily="@font/saira_semibold"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:alpha="0.8" />
            </LinearLayout>

            <View
                android:id="@+id/vTransactionStatusIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_indicator_active" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CLOSE"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/saira_bold"
            android:background="@drawable/button_close_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>