<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/student_dashboard">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Back arrow button at the top -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/bg_white_square" />

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:padding="8dp"
          android:src="@drawable/baseline_arrow_back_24" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <!-- CISync logo -->
      <!-- Register over the logo -->
      <ImageView
          android:id="@+id/imgLogo"
          android:layout_width="419dp"
          android:layout_height="184dp"
          android:layout_marginTop="4dp"
          android:adjustViewBounds="true"
          android:src="@drawable/cisync2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Register"
          android:textSize="24sp"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:gravity="center"
          android:translationY="70dp"
          app:layout_constraintTop_toTopOf="@id/imgLogo"
          app:layout_constraintBottom_toBottomOf="@id/imgLogo"
          app:layout_constraintStart_toStartOf="@id/imgLogo"
          app:layout_constraintEnd_toEndOf="@id/imgLogo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ID Number Field-->

    <EditText
        android:id="@+id/etIdNumber"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Enter ID Number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etLoginEmail" />

    <TextView
        android:id="@+id/tvIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ID NUMBER"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etIdNumber"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- First Name field -->
    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Enter First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etIdNumber" />

    <TextView
        android:id="@+id/tvFirstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  FIRST NAME"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etFirstName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Middle Name field -->
    <EditText
        android:id="@+id/etMiddleName"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Enter Middle Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName" />

    <TextView
        android:id="@+id/tvMiddleNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  MIDDLE NAME"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etMiddleName"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Last Name field -->
    <EditText
        android:id="@+id/etLastName"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Enter Last Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etMiddleName" />

    <TextView
        android:id="@+id/tvLastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  LAST NAME"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etLastName"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Email field -->

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Enter Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLastName" />

    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  EMAIL"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etEmail"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Password field -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Enter Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  PASSWORD"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etPassword"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Confirm Password field -->
    <EditText
        android:id="@+id/etRepeatPassword"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_white_square_with_border"
        android:hint="    Repeat Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <TextView
        android:id="@+id/tvRepeatPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  CONFIRM PASSWORD"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:background="@drawable/label_bg"
        android:paddingEnd="8dp"
        android:translationY="-60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/etRepeatPassword"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Role Selection Section with improved visibility -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Role:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#78CAFF"
        android:layout_marginBottom="12dp" />


    <!-- Radio buttons for Student and Teacher roles -->
    <RadioGroup
        android:id="@+id/rgRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

      <RadioButton
          android:id="@+id/rbStudent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:buttonTint="#78CAFF"
          android:padding="8dp"
          android:text="Student"
          android:textColor="@android:color/white"
          android:textSize="16sp" />

      <RadioButton
          android:id="@+id/rbTeacher"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:buttonTint="#78CAFF"
          android:padding="8dp"
          android:text="Faculty"
          android:textColor="@android:color/white"
          android:textSize="16sp" />
    </RadioGroup>

    <!-- Checkbox: Are you an organization member? -->
    <CheckBox
        android:id="@+id/cbOrgMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a member of an organization"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:buttonTint="#78CAFF"
        android:textSize="16sp" />

    <!-- Label for org position -->
    <TextView
        android:id="@+id/tvOrgPositionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Organization Position"
        android:textColor="#78CAFF"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Spinner for selecting organization role -->
    <Spinner
        android:id="@+id/spOrgPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />


    <!-- Buttons: Back and Register -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"

        android:gravity="center">

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnBack"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:layout_marginEnd="8dp"
          android:text="Back"
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold"
          android:background="@drawable/bg_btn"
          android:gravity="center"
          android:textAlignment="center"
          android:elevation="4dp" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnRegister"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:layout_marginStart="8dp"
          android:text="Register"
          android:textColor="#000000"
          android:textSize="16sp"
          android:textStyle="bold"
          android:background="@drawable/bg_btn"
          android:textAlignment="center"
          android:gravity="center"
          android:padding="0dp"
          android:elevation="4dp"/>
    </LinearLayout>

  </LinearLayout>
</ScrollView>