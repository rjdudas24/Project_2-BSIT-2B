<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/student_dashboard">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Back arrow button at the top -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/bg_white_square" />

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:padding="8dp"
          android:src="@drawable/baseline_arrow_back_24" />
    </FrameLayout>

    <!-- CISync logo -->
    <ImageView
        android:layout_width="274dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/cisync2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Register"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <!-- ID Number field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="ID NUMBER"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etIdNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Enter ID Number"
          android:inputType="text"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

    <!-- First Name field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="FIRST NAME"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etFirstName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Enter First Name"
          android:inputType="textPersonName"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

    <!-- Middle Name field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="MIDDLE NAME"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etMiddleName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Enter Middle Name"
          android:inputType="textPersonName"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

    <!-- Last Name field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="LAST NAME"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etLastName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Enter Last Name"
          android:inputType="textPersonName"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

    <!-- Email field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="EMAIL"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etEmail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Enter Email"
          android:inputType="textEmailAddress"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

    <!-- Password field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="PASSWORD"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etPassword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Enter Password"
          android:inputType="textPassword"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

<!-- Repeat Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="CONFIRM PASSWORD"
          android:textSize="14sp"
          android:textColor="#78CAFF"
          android:background="#004080"
          android:padding="8dp" />

      <EditText
          android:id="@+id/etRepeatPassword"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:hint="Repeat Password"
          android:inputType="textPassword"
          android:padding="12dp"
          android:textColor="#000000" />
    </LinearLayout>

    <!-- Role Selection Section with improved visibility -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Role:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#78CAFF"
        android:layout_marginBottom="12dp" />








